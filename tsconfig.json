{
  "extends": "expo/tsconfig.base", // https://github.com/expo/expo/blob/master/packages/expo-module-scripts/tsconfig.base.json
  "target": "ES2022",
  "module": "ES2022",
  "moduleResolution": "bundler",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true, // needed for @wharfkit/antelope
    "useUnknownInCatchVariables": false, // needed for @wharfkit/antelope
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "App.tsx",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}