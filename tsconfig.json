{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true, // needed for @wharfkit/antelope
    "useUnknownInCatchVariables": false, // needed for @wharfkit/antelope
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "App.tsx",
    "src/**/*",
    "test/**/*",
    "types"
  ],
  "exclude": [
    "node_modules"
  ]
}
