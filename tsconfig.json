{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true, // needed for @greymass/eosio
    "useUnknownInCatchVariables": false, // needed for @greymass/eosio
  },
  "include": [
    "App.tsx",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}