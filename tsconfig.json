{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true, // needed for @wharfkit/antelope
    "useUnknownInCatchVariables": false, // needed for @wharfkit/antelope
  },
  "include": [
    "App.tsx",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
  ],
  "typeRoots": ["./typings", "./node_modules/@types"],
}